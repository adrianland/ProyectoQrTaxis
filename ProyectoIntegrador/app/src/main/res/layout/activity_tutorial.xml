<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/principal0"
    android:background="@drawable/animacion_fondo"
    tools:context=".Tutorial">

    <android.support.v4.view.ViewPager
        android:id="@+id/sliderView"
        android:layout_width="match_parent"
        android:layout_height="649dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/puntos"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_below="@+id/sliderView"
        android:layout_alignEnd="@+id/sliderView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:textAlignment="center"></LinearLayout>

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderView"
        android:layout_alignStart="@+id/sliderView"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="315dp"
        android:background="@android:color/transparent"
        android:text="Atras"
        android:visibility="invisible" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/puntos"
        android:layout_alignEnd="@+id/sliderView"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:text="Siguiente" />


</RelativeLayout>